/**app.wxss**/
page {
  --td-brand-color: #0052d9;
  --td-brand-color-light: #ecf2fe;
  --td-brand-color-dark: #0034b5;
  --td-success-color: #00a870;
  --td-warning-color: #ed7b2f;
  --td-error-color: #e34d59;
  --td-text-color-primary: #000000;
  --td-text-color-secondary: #444444;
  --td-text-color-placeholder: #888888;
  --td-border-color: #e7e7e7;
  --td-border-radius: 6rpx;
  --td-bg-color-page: #f5f5f5;
  --td-bg-color-container: #ffffff;
  --td-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  font-size: 32rpx;
  line-height: 1.6;
  color: var(--td-text-color-primary);
  background-color: var(--td-bg-color-page);
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
  padding: 30rpx;
}

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  border-radius: var(--td-border-radius);
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s;
  border: none;
  outline: none;
}

.btn-primary {
  background-color: var(--td-brand-color);
  color: #ffffff;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: var(--td-text-color-primary);
}

.btn-success {
  background-color: var(--td-success-color);
  color: #ffffff;
}

.btn-warning {
  background-color: var(--td-warning-color);
  color: #ffffff;
}

.btn-error {
  background-color: var(--td-error-color);
  color: #ffffff;
}

.btn-disabled {
  background-color: #f0f0f0;
  color: #bbbbbb;
  cursor: not-allowed;
}

.card {
  background-color: var(--td-bg-color-container);
  border-radius: var(--td-border-radius);
  box-shadow: var(--td-shadow);
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.text-center {
  text-align: center;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.gap-small {
  gap: 10rpx;
}

.gap-medium {
  gap: 20rpx;
}

.gap-large {
  gap: 30rpx;
}

.mt-small {
  margin-top: 10rpx;
}

.mt-medium {
  margin-top: 20rpx;
}

.mt-large {
  margin-top: 30rpx;
}

.mb-small {
  margin-bottom: 10rpx;
}

.mb-medium {
  margin-bottom: 20rpx;
}

.mb-large {
  margin-bottom: 30rpx;
}