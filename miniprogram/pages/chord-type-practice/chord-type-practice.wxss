/* chord-type-practice.wxss */
.container {
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--td-brand-color);
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: var(--td-text-color-secondary);
  margin-bottom: 20rpx;
}

.practice-area {
  background-color: var(--td-bg-color-container);
  border-radius: 12rpx;
  box-shadow: var(--td-shadow);
  padding: 30rpx;
}

.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.question-info {
  margin-bottom: 30rpx;
}

.chord-info {
  font-size: 36rpx;
  margin-top: 10rpx;
}

.chord-type {
  font-weight: bold;
  color: var(--td-brand-color);
}

.options-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.option-item {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 20rpx;
  text-align: center;
  font-size: 32rpx;
  transition: all 0.2s;
}

.option-item:active {
  transform: scale(0.98);
  background-color: #e0e0e0;
}

.option-item.selected {
  background-color: var(--td-brand-color-light);
  border: 2rpx solid var(--td-brand-color);
}

.result-message {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0;
  min-height: 40rpx;
}

.result-message.correct {
  color: var(--td-success-color);
}

.result-message.incorrect {
  color: var(--td-error-color);
}

.action-buttons {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.mini-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
  border-top: 1rpx solid var(--td-border-color);
  padding-top: 20rpx;
  margin-top: 20rpx;
}

.btn-sm {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}