/* pitch-practice.wxss */
.container {
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--td-brand-color);
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: var(--td-text-color-secondary);
  margin-bottom: 20rpx;
}

.practice-area {
  background-color: var(--td-bg-color-container);
  border-radius: 12rpx;
  box-shadow: var(--td-shadow);
  padding: 30rpx;
}

.controls {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.question-info {
  margin-bottom: 30rpx;
}

.note-info {
  font-size: 32rpx;
  margin-top: 10rpx;
}

.reference-note {
  font-weight: bold;
  color: var(--td-brand-color);
}

.piano-mini {
  margin: 30rpx 0;
  overflow-x: auto;
}

.piano-keys {
  display: flex;
  position: relative;
  height: 180rpx;
  min-width: 100%;
}

.key {
  position: relative;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  transition: all 0.1s;
}

.key.white {
  width: 60rpx;
  height: 180rpx;
  background-color: white;
  border: 1rpx solid #ccc;
  z-index: 1;
}

.key.black {
  width: 40rpx;
  height: 110rpx;
  background-color: #333;
  color: white;
  margin-left: -20rpx;
  margin-right: -20rpx;
  z-index: 2;
}

.key.active {
  background-color: var(--td-brand-color-light);
}

.octave-selector {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.octave-buttons {
  display: flex;
  margin-left: 20rpx;
}

.octave-button {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin: 0 10rpx;
}

.octave-button.active {
  background-color: var(--td-brand-color);
  color: white;
}

.selected-answer {
  text-align: center;
  font-size: 32rpx;
  margin: 30rpx 0;
}

.selected-note {
  font-weight: bold;
  color: var(--td-brand-color);
  margin-left: 10rpx;
}

.action-buttons {
  display: flex;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.result-message {
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin: 30rpx 0;
  min-height: 40rpx;
}

.result-message.correct {
  color: var(--td-success-color);
}

.result-message.incorrect {
  color: var(--td-error-color);
}

.mini-stats {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: var(--td-text-color-secondary);
  border-top: 1rpx solid var(--td-border-color);
  padding-top: 20rpx;
  margin-top: 20rpx;
}

.btn-sm {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}