<!--index.wxml-->
<view class="container">
  <view class="header">
    <image class="logo" src="/images/logo.png" mode="aspectFit"></image>
    <view class="title">音乐练习中心</view>
    <view class="subtitle">提升您的音乐技能</view>
  </view>

  <view class="practice-grid">
    <view class="practice-item" bindtap="navigateToChordPractice">
      <image src="/images/piano.png" mode="aspectFit"></image>
      <text>和弦练习</text>
    </view>
    
    <view class="practice-item" bindtap="navigateToFretboardPractice">
      <image src="/images/guitar.png" mode="aspectFit"></image>
      <text>吉他指板熟悉度</text>
    </view>
    
    <view class="practice-item" bindtap="navigateToChordTypePractice">
      <image src="/images/piano.png" mode="aspectFit"></image>
      <text>和弦调性练习</text>
    </view>
    
    <view class="practice-item" bindtap="navigateToPitchPractice">
      <image src="/images/piano.png" mode="aspectFit"></image>
      <text>音高训练</text>
    </view>
  </view>

  <view class="footer">
    <text>版本 1.0.0</text>
  </view>
</view>